{% extends 'base.html.twig' %}

{% block title %}Show{% endblock %}

{% block body %}
    <div>
        <h2 class="text-center">{{ gallery.name }}</h2>
    </div>
    <br>
    <div class="container">
        <div class="row">
            {% for image in gallery.images %}
                <div class="col-6">
                    <img src="{{ absolute_url(vich_uploader_asset(image))  }}" style="width:100%;">
                </div>

            {% endfor %}
        </div>
    </div>

{% endblock %}
